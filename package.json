{
  "name": "FS-Live-Viewer",
  "displayName": "FreeStyleWiki Live Viewer for VSCode",
  "description": "Live preview FreeStyleWiki (a.k.a FS Wiki, FSW) file for VSCode.",
  "version": "1.0.3",
  "license": "Apache-2.0",
  "author": {
    "name": "isso-719"
  },
  "publisher": "kazukiisogai",
  "repository": {
    "type": "git",
    "url": "https://github.com/isso-719/freestylewiki-live-viewer-vscode"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "fs-live-viewer.open",
        "title": "FreeStyleWiki Live Viewer"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "FreeStyleWiki Live Viewer",
      "properties": {
        "fs-live-viewer.styleTheme": {
          "type": "string",
          "description": "CSS テーマを設定します",
          "default": "default",
          "enum": [
            "default",
            "blue_pipe",
            "kati"
          ]
        },
        "fs-live-viewer.pluginParseSettings": {
          "type": "array",
          "description": "プラグインのパース設定",
          "items": {
            "type": "object",
            "properties": {
              "parseFSWTemplate": {
                "type": "string",
                "description": "パースしたいプラグインを設定します"
              },
              "parseHTMLTemplate": {
                "type": "string",
                "description": "HTML に変換時の設定を行います"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/css-modules": "^1.0.5",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "style-loader": "^3.3.4"
  }
}
